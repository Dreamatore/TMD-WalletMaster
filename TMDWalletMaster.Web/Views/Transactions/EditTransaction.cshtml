@model TMDWalletMaster.Web.ViewModels.EditTransactionViewModel

<h1 class="profile-header">Edit Transaction</h1>

<form asp-action="EditTransaction" method="post">
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Back to Profile</a>

<style>
    .form-group {
        margin-bottom: 15px;
    }

    .btn-secondary {
        margin-top: 10px;
    }
</style>