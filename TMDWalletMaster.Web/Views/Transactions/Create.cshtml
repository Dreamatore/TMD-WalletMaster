@model TMD_WalletMaster.Core.Models.Transaction

@{
    ViewData["Title"] = "Create Transaction";
}

<!-- Изменяем цвет заголовка -->
<h1 class="transaction-header">Create Transaction</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label transaction-label"></label>
        <input asp-for="Amount" class="form-control transaction-input" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="control-label transaction-label"></label>
        <input asp-for="Date" class="form-control transaction-input" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label transaction-label"></label>
        <input asp-for="Description" class="form-control transaction-input" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="control-label transaction-label"></label>
        <input asp-for="Category" class="form-control transaction-input" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>