@model IEnumerable<TMD_WalletMaster.Core.Models.Goal>

<div class="container">
    <h2>Your Goals</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Goal Name</th>
            <th>Target Amount</th>
            <th>Current Amount</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var goal in Model)
        {
            <tr>
                <td>@goal.Name</td>
                <td>@goal.TargetAmount</td>
                <td>@goal.CurrentAmount</td>
            </tr>
        }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Goals")" class="btn btn-primary">Add New Goal</a>
</div>