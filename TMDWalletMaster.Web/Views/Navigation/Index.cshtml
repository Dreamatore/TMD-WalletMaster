@{
    ViewData["Title"] = "Navigation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Стили для заголовка */
        .navigation-title {
            color: #ffc107; /* Ярко-жёлтый цвет текста */
            font-size: 2.5rem; /* Размер шрифта */
            text-align: center; /* Выравнивание по центру */
            margin-bottom: 30px; /* Отступ снизу */
        }

        /* Стили для контейнера с кнопками */
        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 50px;
        }

        /* Стили для кнопок */
        .btn {
            display: inline-block;
            padding: 20px 40px;
            font-size: 1.25rem;
            color: #ffffff;
            background-color: #00bfff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            cursor: pointer;
        }

        /* Стили для кнопок при наведении */
        .btn:hover {
            background-color: #1e90ff;
        }
    </style>
</head>
<body>
<!-- Заголовок страницы -->
<h1 class="navigation-title">Navigation</h1>
    
<!-- Контейнер с кнопками -->
<div class="button-container">
    <a href="@Url.Action("Index", "Goals")" class="btn">Manage your Goal</a>
    <a href="@Url.Action("Index", "Transactions")" class="btn">Manage your Transaction</a>
    <a href="@Url.Action("Index", "Budgets")" class="btn">Manage your Budget</a>
</div>
</body>
</html>