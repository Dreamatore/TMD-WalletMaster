@model TMD_WalletMaster.Core.Models.Budget

@{
    ViewData["Title"] = "Create Budget";
    var categories = ViewBag.Categories as IEnumerable<SelectListItem>;
    Console.WriteLine("Categories in ViewBag:");
    if (categories != null)
    {
        foreach (var category in categories)
        {
            Console.WriteLine($"Category Value: {category.Value}, Text: {category.Text}");
        }
    }
    else
    {
        Console.WriteLine("No categories found in ViewBag.");
    }
}

<div class="container">
    <h2 class="highlight-yellow">Create New Budget</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label highlight-green"></label>
            <input asp-for="Name" class="form-control highlight-green" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Amount" class="control-label highlight-green"></label>
            <input asp-for="Amount" class="form-control highlight-green" type="number" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate" class="control-label highlight-green"></label>
            <input asp-for="StartDate" class="form-control highlight-green" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="control-label highlight-green"></label>
            <input asp-for="EndDate" class="form-control highlight-green" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="control-label highlight-green"></label>
            <select asp-for="CategoryId" class="form-control highlight-green" asp-items="ViewBag.Categories">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Budget</button>
        <a href="@Url.Action("Index", "Budgets")" class="btn btn-secondary">Back to List</a>
    </form>
</div>
