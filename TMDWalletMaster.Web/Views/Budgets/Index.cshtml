@model IEnumerable<TMD_WalletMaster.Core.Models.Budget>

<div class="container">
    <h2 style="color: yellow;">Your Budgets</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Budget Name</th>
            <th>Amount</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var budget in Model)
        {
            <tr>
                <td>@budget.Name</td>
                <td>@budget.Amount</td>
                <td>@budget.StartDate.ToString("d")</td>
                <td>@budget.EndDate.ToString("d")</td>
            </tr>
        }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Budgets")" class="btn btn-primary">Add New Budget</a>
</div>