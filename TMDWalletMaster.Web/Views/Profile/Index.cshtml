@model TMDWalletMaster.Web.ViewModels.UserProfileViewModel

<h1 class="profile-header">@Model.User.UserName's Profile</h1>

<div class="profile-section">
    <h2 class="section-header">Budgets</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var budget in Model.Budgets)
        {
        <tr>
            <td>@budget.Name</td>
            <td>@budget.Amount</td>
            <td>@budget.StartDate.ToShortDateString()</td>
            <td>@budget.EndDate.ToShortDateString()</td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div class="profile-section">
    <h2 class="section-header">
        Transactions
        <form asp-action="ClearAllTransactions" asp-controller="Profile" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Clear All</button>
        </form>
    </h2>
    <table class="table">
        <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Actions</th>  <!-- Добавлено -->
        </tr>
        </thead>
        <tbody>
        @foreach (var transaction in Model.Transactions)
        {
        <tr>
            <td>@transaction.Description</td>
            <td>@transaction.Amount</td>
            <td>@transaction.Date.ToShortDateString()</td>
            <td>
                <form asp-action="DeleteTransaction" asp-controller="Profile" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@transaction.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>  <!-- Добавлено -->
        </tr>
        }
        </tbody>
    </table>
</div>

<div class="profile-section">
    <h2 class="section-header">Goals</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Target Amount</th>
            <th>Current Amount</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var goal in Model.Goals)
        {
        <tr>
            <td>@goal.Name</td>
            <td>@goal.TargetAmount</td>
            <td>@goal.CurrentAmount</td>
            <td>@goal.StartDate.ToShortDateString()</td>
            <td>@goal.EndDate.ToShortDateString()</td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div class="profile-section">
    <h2 class="section-header">Wanna Import Bank Data?</h2>
    <form asp-controller="Profile" asp-action="Import" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="file" class="control-label">Select .xlsx file to import:</label>
            <input type="file" id="file" name="file" class="form-control-file" />
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="background-color: #007bff; color: white;">Import (xlsx)</button>
    </form>
</div>

<style>
    .section-header {
        color: #007bff;
        font-weight: bold;
    }

    .btn-block {
        margin-top: 10px;
    }

    .profile-section {
        margin-bottom: 30px;
    }
</style>
